{{#if posts.length}}
<section>
    <h2>Your Dashboard</h2>
    <ul class="post-list">
        {{#each posts as |post|}}
        
        {{> post-info post}}
        <li>
            <a href="/dashboard/edit/{{post.id}}" class="edit-link" style="display:inline-block;">Edit Post</a>
            <a style="float:right;text-align:right;display:inline-block;" href="/post/{{id}}" class="links">Comment Post</a>  
